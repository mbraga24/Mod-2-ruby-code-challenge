<h1>Guest Appearance</h1>
<ul>
  <% if flash[:message].any? %>
    <% flash[:message].each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  <% end %>
</ul>

<%= form_for(@appearance) do |f| %>

  <%= f.label :episode_id %><br>
  <%= f.collection_select :episode_id, Episode.all, :id, :date, {:prompt => "Choose an Episode"} %><br><br>
  <%= f.label :guest_id %><br>
  <%= f.collection_select :guest_id, Guest.all, :id, :name, {:prompt => "Choose a Guest"} %><br><br>
  <%= f.label :rating %><br>
  <%= f.number_field :rating, value: "Rate", in: 1..6 %><br><br>
  <%= f.submit %>
<% end %>
<%= flash.inspect %>